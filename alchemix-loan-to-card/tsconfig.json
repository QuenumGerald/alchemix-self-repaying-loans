{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "esnext", // Try esnext for broader compatibility
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "moduleResolution": "node", // Ensure resolution aligns with module system
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "src/global.d.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
