{
  "compilerOptions": {
    "jsx": "react",
    "composite": true, // Obligatoire pour les projets référencés
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist" // Spécifie le répertoire de sortie
  },
  "include": ["src/**/*"]
}
